{% extends 'base.html.twig'  %}
{% block title %}{{ auteur.getNomPrenom }}{% endblock %}
{% block pageName %}Author{% endblock %}

{%  block body %}

  <div class="page-bottom">
			<div class="container">
				<div class="row">
					<div class="col-lg-12">
						<div class="about">
							<div class="row">
								<div class="col-lg-6 col-md-6 col-sm-12 align-self-center">
									<div class="about-image">
                  {% if auteur.sexe == 'M' %}
										<img src="https://picsum.photos/id/349/556/370" class="img-fluid" alt="">
                  {% else %}
                    <img src="https://picsum.photos/id/399/556/370" class="img-fluid" alt="">
                  {% endif %}
									
									</div>
								</div>
								<div class="col-lg-6 col-md-6 col-sm-12 align-self-center mobile-top-fix">
									<h2>{{ auteur.getNomPrenom() }}</h2>
									<h3>Author</h3>
									<p><b style="color:black;">BirthDay :</b> {{ auteur.getDateDeNaissanceStr }} <br>
                  <b style="color:black;">Nationality :</b> {{ auteur.nationalite }}</p>
									<b style="color:black;">Books :</b>

                  <div class="widget-tags">
                  {% for book in auteur.getLivres() %}
									  <a href={{ asset('book/%s') | format( book.id)}}>{{ book.title }}</a> | 
                  {% endfor %}
								</div>
									  
                
							

								
								</div>
							</div>
						</div>
					</div>
				</div>
			</div>

{% endblock %}