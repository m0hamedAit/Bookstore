<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}{% endblock %}</title>
        
        <meta name="viewport" content="width=device-width, initial-scale=1.0">

       <!-- Favicon -->
	<link rel="icon" type="image/png" href={{ asset('assets/images/favicon/favicon.png')}} />

	<!-- Bootstrap & Plugins CSS -->
	<link href={{ asset("assets/css/bootstrap.min.css")}} rel="stylesheet" type="text/css">
	<link href={{ asset("assets/css/font-awesome.min.css")}} rel="stylesheet" type="text/css">

	<!-- Custom CSS -->
	<link href={{ asset("assets/css/dark.css")}} rel="stylesheet" type="text/css">
        

        {% block stylesheets %}
            {{ encore_entry_link_tags('app') }}
        {% endblock %}

        {% block javascripts %}
            {{ encore_entry_script_tags('app') }}
        {% endblock %}
    </head>
    <body>
       
	<div id="preloader">
		<div class="jumper">
			<div></div>
			<div></div>
			<div></div>
		</div>
	</div>	

	<header class="header-area header-sticky">
		<div class="container">
			<div class="row">
				<div class="col-12">
					<nav class="main-nav">
					
						<a href={{asset('')}} class="logo">
							<img src={{ asset("assets/images/logo-header.png")}} alt="bookstore" style="width:150px;"/>
						</a>
						
						<ul class="nav">
							<li>
							<a href={{asset("")}}>Home</a>
							</li>
							{% if not app.user %}
            	<li>
								<a href={{asset("login")}}>Books</a>
							</li>
							<li>
								<a href={{asset("login")}}>Authors</a>
							</li>
							{% else %}
            	<li>
								<a href={{asset("books")}}>Books</a>
							</li>
							<li>
								<a href={{asset("authors")}}>Authors</a>
							</li>
							{% endif %}
							{% if not app.user %} 
							<li><a class="btn-nav" href={{ asset('login')}} >Login</a></li>
							{% else %}
								{% if is_granted('ROLE_ADMIN') %}
							<li>
							<a href={{asset("admin")}}>Dashboard</a>
							</li>
								{% endif %}
							<li><a class="btn-nav" href={{ asset('logout')}} >Logout</a></li>
							{% endif %}
						</ul>
						<a class='menu-trigger'>
							<span>Menu</span>
						</a>
						
					</nav>
				</div>
			</div>
		</div>
	</header>
	

    <section class="page">
	
		<div class="cover">
			<div class="cover-top">
				<div class="container">
					<div class="row">
						<div class="offset-lg-3 col-lg-6">
							<h1></h1>
						</div>
					</div>
				</div>
			</div>
			<div class="cover-bottom">
				<div class="container">
					<div class="row">
						<div class="col-lg-12">
							<ol class="breadcrumb">
								<li><a href={{asset('')}}>Bookstore</a></li>
								<li class="active">{% block pageName %}{% endblock %}</li>
							</ol>
						</div>
					</div>
				</div>
			</div>
		</div>
		

            {% block body %}{% endblock %}



    </section>
            
	<footer>
		<div class="container">
			<div class="row">
				<div class="col-lg-12">
					<p class="copyright">Made with <img src={{asset("assets/images/love.png")}} alt="love"> by <a href="https://github.com/m0hamedAit" style="color:#fff">MHD</a></p>
				</div>
			</div>
		</div>
		
	</footer>
		



	<!-- jQuery -->
	<script src={{ asset("assets/js/jquery-2.1.0.min.js")}}></script>

	<!-- Bootstrap -->
	<script src={{ asset("assets/js/popper.js")}}></script>
	<script src={{ asset("assets/js/bootstrap.min.js")}}></script>

	<!-- Plugins -->
	<script src={{ asset("assets/js/scrollreveal.min.js")}}></script>
	<script src={{ asset("assets/js/imgfix.min.js")}}></script>
	<script src={{ asset("assets/js/parallax.min.js")}}></script>

	<!-- Global Init -->
	<script src={{ asset("assets/js/custom.js")}}></script>
    
    {% block javascript %}
            
    {% endblock %}
    </body>
</html>
