                  <br>
                <span style="float:right;"> <img src={{ asset("assets/images/star.png")}} style="width:20px; margin-bottom:5px"> {{ book.note }}/20</span>
                </p>
									
								
								</div>
							</div>
						</div>
					</div>
				</div>
			</div>

{% endblock %}