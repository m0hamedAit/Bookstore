{% extends 'base.html.twig'  %}
{% block title %}{{ book.title }}{% endblock %}
{% block pageName %}Book{% endblock %}

{%  block body %}

  <div class="page-bottom">
			<div class="container">
				<div class="row">
					<div class="col-lg-12">
						<div class="about">
							<div class="row">
								<div class="col-lg-6 col-md-6 col-sm-12 align-self-center">
									<div class="about-image">
                  
										<img src="https://picsum.photos/id/1073/556/370" class="img-fluid" alt="">
									
									</div>
								</div>
								<div class="col-lg-6 col-md-6 col-sm-12 align-self-center mobile-top-fix">
									<h2>{{ book.title }}</h2>
									<h3><b>by :<by>
                    {% for auteur in book.getAuteurs() %}
                      <a href={{ asset('author/%s') | format( auteur.id)}}>{{ auteur.getNomPrenom }}</a> |
                    {% endfor %}
                  </h3>
									<p><b style="color:black;">Publication :</b> {{ book.getDateDeParutionStr }} <br>
                  <b style="color:black;">Number of pages :</b> {{ book.getNombrePages }}<br>
									<b style="color:black;">Isbn : </b> {{ book.isbn }}<br>
                  <b style="color:black;">Type : </b> 
                  
                  {% for genre in book.getGenres() %}
									  <a href={{ asset('books/g%s') | format( genre.id)}}>{{ genre.nom }}</a> | 
                  {% endfor %}
                  <br>
                  <b style="color:black;">Description : </b>
