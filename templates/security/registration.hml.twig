{% extends 'base.html.twig' %}
{% block title %}Sign Up
{% endblock %}
{% block pageName %}Signup
{% endblock %}

{% block body %}
	<div class="container py-5 h-100">
		<div class="row d-flex justify-content-center align-items-center h-100">
			<div class="col-12 col-md-8 col-lg-6 col-xl-5">
				<div class="card text-white" style="border-radius: 1rem; background-color: #070225">
					<div class="card-body p-5 text-center">
						<div class="mb-md-5 mt-md-4 pb-5">
							<h2 class="fw-bold mb-4 text-uppercase">Sign Up</h2>
							{{form_start(form)}}
							<div class="my-custom-class-for-errors">
								{{ form_errors(form) }}
							</div>
							<div class="form-group form-outline form-white mb-4">
								{{ form_row(form.email)}}
							</div>
							<div class="form-group form-outline form-white mb-4">
								{{ form_row(form.password)}}
							</div>
							<div class="form-group form-outline form-white mb-4">
								{{ form_row(form.confirm_password)}}
							</div>
							<div class="form-check d-flex justify-content-center mb-5">
								<input class="form-check-input me-2" type="checkbox" value="" id="form2Example3cg" style="position: relative"/>
								<label class="form-check-label" for="form2Example3g">
									&nbsp;I agree all statements in
									<a href="#" class="text-body">
										<u>Terms of service</u>
									</a>
								</label>
							</div>

							<button class="btn btn-outline-light btn-lg mb-4" type="submit">SignUp</button>
						</div>
						{{ form_end(form) }}

						<div>
							<p class="mb-0">Have already an account?
								<a href={{asset('login')}} class="text-white-50 fw-bold">LogIn</a>
							</p>
						</div>

					</div>
				</div>
			</div>
		</div>
	</div>

{% endblock %}
